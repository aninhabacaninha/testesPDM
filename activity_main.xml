<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextAddArquivo"
        android:layout_width="347dp"
        android:layout_height="160dp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/buttonApresentar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonSalvar"
        android:layout_width="91dp"
        android:layout_height="46dp"
        android:layout_marginTop="48dp"
        android:text="Salvar"
        app:layout_constraintBottom_toTopOf="@+id/editTextAddArquivo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonApresentar"
        android:layout_width="128dp"
        android:layout_height="51dp"
        android:layout_marginBottom="56dp"
        android:text="Apresentar"
        app:layout_constraintBottom_toTopOf="@+id/textViewMostrarTexto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewMostrarTexto"
        android:layout_width="323dp"
        android:layout_height="206dp"
        android:layout_marginBottom="76dp"
        android:text="Seu texto irÃ¡ aparecer aqui..."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>